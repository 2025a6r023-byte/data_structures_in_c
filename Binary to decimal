#include<stdio.h>
#include<math.h>
int main(){
    int num;
    printf("Enter Binary number: ");
    scanf("%d",&num);
    int p=0, sum=0;
    while(num != 0){
        int rem = num%10;
        sum = sum + rem*pow(2,p);
        p++;
        num = num/10;

    }
    printf("Decimal = %d",sum);
    return 0;
}
