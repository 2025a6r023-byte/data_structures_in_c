#include<stdio.h>
#include<string.h>
int main(){
    int num;
    char hexa[100] = "";
    printf("Enter number: ");
    scanf("%d",&num);
    int num1 = num;
    while(num != 0){
        int rem = num%16;
        char str[2];
        if(rem>=0 && rem<=9)
        sprintf(str,"%d",rem);
        else if(rem == 10)
        str[0] = 'A';
        else if(rem == 11)
        str[0] = 'B';
        else if(rem == 12)
        str[0] = 'C';
        else if(rem == 13)
        str[0] = 'D';
        else if(rem == 14)
        str[0] = 'E';
        else if(rem == 15)
        str[0] = 'F';
        str[1] = '\0';
        strcat(hexa,str);
        num = num/16;
    }strrev(hexa);
    printf("hexa decimal of %d is %s",num,hexa );
    return 0;
}
